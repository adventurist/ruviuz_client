                    app:text_color="#000"
                    app:text_size="20sp"
                    app:value="0"
                    android:layout_below="@+id/topWidthPickerTv"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_height="48dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/inches"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/topWidthPickerIn"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="72dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:id="@+id/emptyLengthTv"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/topWidthPickerFt"
                    android:text="@string/empty_length"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:textColor="#000" />

                <me.angrybyte.numberpicker.view.ActualNumberPicker
                    android:id="@+id/emptyLengthPickerFt"
                    android:layout_width="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="12dp"
                    android:background="#ee52ff"
                    android:visibility="gone"
                    app:bar_color="@android:color/white"
                    app:bar_width="2dp"
                    app:bars_count="26"
                    app:controls_color="@android:color/white"
                    app:draw_over_controls="true"
                    app:draw_over_text="false"
                    app:fast_controls_color="@android:color/darker_gray"
                    app:highlight_color="#263238"
                    app:max_value="200"
                    app:min_value="0"
                    app:selection_color="#fff"
                    app:show_bars="true"
                    app:show_controls="true"
                    app:show_fast_controls="false"
                    app:show_highlight="true"
                    app:show_text="true"
                    app:text_color="#000"
                    app:text_size="20sp"
                    app:value="0"
                    android:layout_below="@+id/emptyLengthTv"
                    android:layout_marginTop="12dp"
                    android:layout_height="48dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:id="@+id/emptyLengthFtTv"
                    android:text="@string/ft"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/emptyLengthPickerFt"
                    android:layout_marginStart="72dp" />


                <me.angrybyte.numberpicker.view.ActualNumberPicker
                    android:id="@+id/emptyLengthPickerIn"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="12dp"
                    android:visibility="gone"
                    android:background="#ee52ff"
                    app:bar_color="@android:color/white"
                    app:bar_width="2dp"
                    app:bars_count="26"
                    app:controls_color="@android:color/white"
                    app:draw_over_controls="true"
                    app:draw_over_text="false"
                    app:fast_controls_color="@android:color/darker_gray"
                    app:highlight_color="#263238"
                    app:max_value="72"
                    app:min_value="0"
                    app:selection_color="#fff"
