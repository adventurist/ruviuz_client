                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:id="@+id/emptyWidthTv"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/emptyLengthPickerFt"
                    android:text="@string/empty_width"
                    android:layout_marginTop="8dp"
                    android:textColor="#000" />

                <me.angrybyte.numberpicker.view.ActualNumberPicker
                    android:id="@+id/emptyWidthPickerFt"
                    android:layout_width="wrap_content"
                    android:layout_alignParentStart="true"
                    android:visibility="gone"
                    android:layout_marginStart="12dp"
                    android:background="#ee52ff"
                    app:bar_color="@android:color/white"
                    app:bar_width="2dp"
                    app:bars_count="26"
                    app:controls_color="@android:color/white"
                    app:draw_over_controls="true"
                    app:draw_over_text="false"
