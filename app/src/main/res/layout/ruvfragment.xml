<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:id="@+id/row1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
        <TextView
            android:text="ID"
            android:layout_height="wrap_content"
            android:id="@+id/idLabel"
            android:layout_width="64dp"
            android:textStyle="bold"
            android:layout_marginStart="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:id="@+id/idTv"
            android:textColor="@color/colorPrimaryDark"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/row1"
            android:id="@+id/row2">
        <TextView
            android:text="Address"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/addressLabel"
            android:layout_alignBottom="@+id/idLabel"
            android:layout_marginStart="8dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:id="@+id/addressEt"
            android:layout_alignEnd="@+id/addressLabel"
            android:textColor="@color/colorPrimaryDark"
            android:selectAllOnFocus="true"
            android:inputType="textMultiLine|textPostalAddress">
        </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@id/row3"
            android:layout_below="@id/row2">
            <TextView
                android:text="@string/customer"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:id="@+id/custLabel"
                android:textStyle="bold"
                android:layout_marginStart="8dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:id="@+id/custEt"
                android:textColor="@color/colorPrimaryDark"
                android:selectAllOnFocus="true"
/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="4dp"
            android:background="@color/ruvGreen"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/row3"
            android:id="@+id/sectionView"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sectionView"
            android:id="@+id/row6">
        <TextView
            android:text="Price"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:id="@+id/priceLabel"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:minWidth="128dp"
            android:id="@+id/priceEt"
            android:selectAllOnFocus="true"
            android:layout_alignEnd="@+id/priceLabel"
            android:textColor="@color/colorPrimaryDark">

        </EditText>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/row6"
            android:id="@+id/row7">
        <Button
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/imgBtn"
            android:background="@drawable/attach"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:backgroundTint="@color/ruvGreen"
            android:layout_centerHorizontal="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
            android:elevation="0dp" />

        <Button
            android:layout_height="56dp"
            android:id="@+id/takePhoto"
            android:background="@drawable/takephoto"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:elevation="0dp"
            android:src="@drawable/ruvbtn_bl"
            android:layout_width="56dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ruvUpdate"
            android:layout_centerVertical="true"
            android:text="@string/update"
            android:layout_alignParentEnd="true"
            android:background="@android:color/holo_purple"
            android:layout_marginEnd="16dp">
        </Button>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="10dp"
            android:layout_below="@id/row7"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:id="@+id/row8">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:id="@+id/ruvUpPhoto1"
                android:elevation="1dp">

            </ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_below="@id/ruvPhoto1"
                android:layout_centerHorizontal="true"
                android:id="@+id/ruvUpPhoto2"
                android:elevation="1dp">

            </ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_below="@id/ruvPhoto2"
                android:id="@+id/ruvUpPhoto3"
                android:elevation="1dp">
            </ImageView>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>

