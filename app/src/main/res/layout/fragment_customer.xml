<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <ImageView android:src="@drawable/construction"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_marginBottom="24dp"
            android:layout_alignParentTop="true"
            android:id="@+id/ruvLogo"
            android:layout_centerHorizontal="true" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ruvLogo"
            android:id="@+id/customerFirstWrap"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:inputType="textPersonName"
                android:hint="@string/first_name"
                android:background="#46ffcb"
                android:textColor="#000"
                android:textSize="20sp"
                android:id="@+id/customerFirst"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerFirstWrap"
            android:id="@+id/customerLastWrap"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:inputType="textPersonName"
                android:hint="@string/last_name"
                android:background="#46ffcb"
                android:textColor="#000"
                android:textSize="20sp"
                android:id="@+id/customerLast"
                />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/customerLastWrap"
            android:id="@+id/customerDetails">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_alignParentStart="true"
                android:inputType="textEmailAddress"
                android:background="#46ffcb"
                android:textColor="#000"
                android:textSize="20sp"
                android:hint="@string/email" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/input_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_alignParentEnd="true"
                android:inputType="phone"
                android:background="#46ffcb"
                android:textColor="#000"
                android:textSize="20sp"
                android:hint="@string/phone_number" />
        </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/customerBtn"
            android:layout_below="@id/customerDetails"
            android:layout_centerHorizontal="true"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="160dp"
            android:layout_height="56dp"
            android:background="@color/common_google_signin_btn_text_dark_disabled"
            android:textColor="#fff"
            android:textSize="22sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:text="@string/submit"
            android:backgroundTint="@color/colorRow" />
    </RelativeLayout>
</ScrollView>