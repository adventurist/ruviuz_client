<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:minHeight="25dp"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/common_google_signin_btn_text_dark_disabled"
    android:id="@+id/rviewRow">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:id="@+id/row1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    <TextView
        android:text="@string/id"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:id="@+id/idLabel"
        android:layout_marginStart="8dp"
        android:textColor="#FFFFFF"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:id="@+id/idTv"
        android:textColor="#f9cb1e"
        android:textStyle="bold">

    </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_below="@id/row1"
        android:id="@+id/row2">
    <TextView
        android:text="Address"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:id="@+id/addressLabel"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginStart="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:id="@+id/addressTv"
        android:textColor="#f9cb1e">
    </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/row2"
        android:padding="4dp"
        android:id="@+id/row3"
        android:orientation="horizontal">
        <TextView
            android:text="@string/customer"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:id="@+id/custLabel"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:id="@+id/custTv"
            android:textColor="#f9cb1e">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/row3"
        android:padding="4dp"
        android:id="@+id/row4"
        android:orientation="horizontal">
        <TextView
            android:text="@string/floors"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:id="@+id/flrLabel"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:id="@+id/flrTv"
            android:textColor="#f9cb1e">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/row4"
        android:padding="4dp"
        android:id="@+id/row5"
        android:orientation="horizontal">
        <TextView
            android:text="@string/ready"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:id="@+id/readyLabel"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:id="@+id/readyTv"
            android:textColor="#f9cb1e">
        </TextView>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="4dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/row5"
        android:id="@+id/row6">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/priceLayout"
            android:orientation="horizontal">
            <TextView
                android:text="Price"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:id="@+id/priceLabel"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginStart="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:inputType=""
                android:id="@+id/priceTv"
                android:textColor="#f9cb1e">
            </TextView>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:id="@+id/roofOptions"
            android:layout_marginEnd="4dp"
            android:text="@string/edit"
            android:padding="4dp"
            android:drawableStart="@drawable/edit32"
            android:background="@drawable/ruvbtn_wt" />
    </RelativeLayout>
    <TextView
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/row6"
        android:text="@string/sections"
        android:id="@+id/sectionLabel"
        >
    </TextView>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sectionRecycler"
        android:layout_below="@id/sectionLabel"
        android:background="@color/ruvGreen"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_below="@id/sectionRecycler"
        android:id="@+id/imgLayout">

    <ImageView
        android:layout_height="wrap_content"
        android:id="@+id/ruvPhoto1"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:adjustViewBounds="true"
        android:maxWidth="96dp"
        android:layout_width="96dp"
        android:layout_alignParentStart="true">
    </ImageView>

    <ImageView
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/ruvPhoto2"
        android:maxWidth="96dp"
        android:adjustViewBounds="true"
        android:layout_width="96dp" />
    <ImageView
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="4dp"
        android:id="@+id/ruvPhoto3"
        android:layout_alignParentEnd="true"
        android:adjustViewBounds="true"
        android:maxWidth="96dp"
        android:layout_width="96dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="96dp"
            android:layout_below="@id/ruvPhoto1"
            android:layout_alignParentStart="true"
            android:visibility="gone"
            android:id="@+id/ruvComment1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="96dp"
            android:layout_below="@id/ruvPhoto2"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:id="@+id/ruvComment2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="96dp"
            android:visibility="gone"
            android:layout_below="@id/ruvPhoto3"
            android:layout_alignParentEnd="true"
            android:id="@+id/ruvComment3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="96dp"
            android:layout_below="@id/ruvComment1"
            android:layout_alignParentStart="true"
            android:visibility="gone"
            android:id="@+id/cmtTime1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="96dp"
            android:layout_below="@id/ruvComment2"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:id="@+id/cmtTime2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="96dp"
            android:visibility="gone"
            android:layout_below="@id/ruvComment3"
            android:layout_alignParentEnd="true"
            android:id="@+id/cmtTime3"/>
    </RelativeLayout>
    </RelativeLayout>