<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:minHeight="100dp"
    android:descendantFocusability="blocksDescendants"
    android:background="#beffea"
    android:id="@+id/rviewRow">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:id="@+id/row1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    <TextView
        android:text="ID"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:id="@+id/idLabel"
        android:layout_marginStart="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:id="@+id/idTv"
        android:textColor="@color/colorPrimaryDark">

    </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_below="@id/row1"
        android:id="@+id/row2">
    <TextView
        android:text="Address"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:id="@+id/addressLabel"
        android:layout_alignBottom="@+id/idLabel"
        android:layout_marginStart="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:id="@+id/addressTv"
        android:layout_alignEnd="@+id/addressLabel"
        android:textColor="@color/colorPrimaryDark">
    </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_below="@id/row2"
        android:id="@+id/row3">
    <TextView
        android:text="Width"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:id="@+id/widthLabel"
        android:layout_alignBottom="@+id/addressLabel"
        android:layout_marginStart="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:id="@+id/widthTv"
        android:layout_alignBottom="@+id/idTv"
        android:layout_alignEnd="@+id/widthLabel"
        android:textColor="@color/colorPrimaryDark">

    </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_below="@id/row3"
        android:id="@+id/row4">
    <TextView
        android:text="Length"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:id="@+id/lengthLabel"
        android:layout_alignBottom="@+id/widthLabel"
        android:layout_marginStart="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:id="@+id/lengthTv"
        android:layout_alignEnd="@+id/lengthLabel"
        android:textColor="@color/colorPrimaryDark">

    </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_below="@id/row4"
        android:id="@+id/row5">
    <TextView
        android:text="Slope"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:id="@+id/slopeLabel"
        android:layout_alignBottom="@+id/lengthLabel"
        android:layout_marginStart="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:id="@+id/slopeTv"
        android:layout_alignEnd="@+id/slopeLabel"
        android:textColor="@color/colorPrimaryDark">

    </TextView>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="4dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/row5"
        android:id="@+id/row6">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/priceLayout"
            android:orientation="horizontal">
            <TextView
                android:text="Price"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:id="@+id/priceLabel"
                android:layout_marginStart="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:inputType=""
                android:id="@+id/priceTv"
                android:layout_alignEnd="@+id/priceLabel"
                android:textColor="@color/colorPrimaryDark">
            </TextView>
        </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/roofOptions"
        android:text="Edit"
        android:background="?android:attr/colorActivatedHighlight" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_below="@id/row6"
        android:id="@+id/row7">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ruvPhoto1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp">


    </ImageView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:id="@+id/ruvPhoto2"
        android:layout_alignEnd="@+id/ruvPhoto1">

    </ImageView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:id="@+id/ruvPhoto3"
        android:layout_alignEnd="@+id/ruvPhoto2">

    </ImageView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/upFrag"
        tools:layout="@layout/updatefragment"
        android:layout_below="@+id/row7" />

    </RelativeLayout>