<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:minHeight="25dp"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/common_google_signin_btn_text_dark_disabled"
    android:id="@+id/rviewRow">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:id="@+id/row1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    <TextView
        android:text="ID"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:id="@+id/idLabel"
        android:layout_marginStart="8dp"
        android:textColor="#FFFFFF"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:id="@+id/idTv"
        android:textColor="#f9cb1e"
        android:textStyle="bold">

    </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_below="@id/row1"
        android:id="@+id/row2">
    <TextView
        android:text="Address"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:id="@+id/addressLabel"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginStart="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:id="@+id/addressTv"
        android:textColor="#f9cb1e">
    </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/row2"
        android:padding="4dp"
        android:id="@+id/row3"
        android:orientation="horizontal">
        <TextView
            android:text="@string/customer"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:id="@+id/custLabel"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:id="@+id/custTv"
            android:textColor="#f9cb1e">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_below="@id/row3"
        android:id="@+id/row4">
    <TextView
        android:text="Width"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:id="@+id/widthLabel"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginStart="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:id="@+id/widthTv"
        android:layout_alignBottom="@+id/idTv"
        android:layout_alignEnd="@+id/widthLabel"
        android:textColor="#f9cb1e">

    </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_below="@id/row4"
        android:id="@+id/row5">
    <TextView
        android:text="Length"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:id="@+id/lengthLabel"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginStart="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:id="@+id/lengthTv"
        android:textColor="#f9cb1e">

    </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_below="@id/row5"
        android:id="@+id/row6">
    <TextView
        android:text="Slope"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:id="@+id/slopeLabel"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginStart="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:id="@+id/slopeTv"
        android:textColor="#f9cb1e">

    </TextView>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="4dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/row6"
        android:id="@+id/row7">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/priceLayout"
            android:orientation="horizontal">
            <TextView
                android:text="Price"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:id="@+id/priceLabel"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginStart="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:inputType=""
                android:id="@+id/priceTv"
                android:textColor="#f9cb1e">
            </TextView>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:id="@+id/roofOptions"
            android:layout_marginEnd="4dp"
            android:text="@string/edit"
            android:background="?android:attr/colorActivatedHighlight" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_below="@id/row7"
        android:id="@+id/row8">

    <ImageView
        android:layout_height="wrap_content"
        android:id="@+id/ruvPhoto1"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:adjustViewBounds="true"
        android:maxWidth="96dp"
        android:layout_width="96dp"
        android:layout_alignParentStart="true">
    </ImageView>

    <ImageView
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/ruvPhoto2"
        android:maxWidth="96dp"
        android:adjustViewBounds="true"
        android:layout_width="96dp" />
    <ImageView
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="4dp"
        android:id="@+id/ruvPhoto3"
        android:layout_alignParentEnd="true"
        android:adjustViewBounds="true"
        android:maxWidth="96dp"
        android:layout_width="96dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="96dp"
            android:layout_below="@id/ruvPhoto1"
            android:layout_alignParentStart="true"
            android:visibility="gone"
            android:id="@+id/ruvComment1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="96dp"
            android:layout_below="@id/ruvPhoto2"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:id="@+id/ruvComment2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="96dp"
            android:visibility="gone"
            android:layout_below="@id/ruvPhoto3"
            android:layout_alignParentEnd="true"
            android:id="@+id/ruvComment3"/>
    </RelativeLayout>
    </RelativeLayout>