<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000"
    android:layout_marginTop="?attr/actionBarSize"
    style="@style/RuvFullFrag"
    tools:context="stronglogic.ruviuz.fragments.MainFragment">


    <!--<include-->
        <!--layout="@layout/app_bar"/>-->

    <android.support.v7.widget.Toolbar
        android:id="@+id/ruvFragToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:id="@+id/actionUI"
        android:orientation="vertical"
        android:background="@color/material_blue_grey_800">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/actionfragTitle"
        android:text="@string/ruv_action"
        android:textColor="@color/ruvGreen"
        />

    <ImageButton
        android:layout_width="168dp"
        android:layout_height="42dp"
        android:id="@+id/createQuote"
        android:layout_gravity="center_horizontal"
        android:selectAllOnFocus="true"
        android:padding="4dp"
        android:gravity="center"
        android:background="@drawable/ruvbtn_wt"
        android:scaleType="fitCenter"
        android:src="@drawable/create_new"
        android:layout_margin="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_new_quote"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:textColor="#000"
        />
    <ImageButton
        android:layout_width="168dp"
        android:layout_height="42dp"
        android:id="@+id/seeQuotes"
        android:layout_gravity="center_horizontal"
        android:text="@string/see_quotes"
        android:selectAllOnFocus="true"
        android:src="@drawable/rooflist"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:padding="4dp"
        android:background="@drawable/ruvbtn_wt"
        android:layout_margin="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/see_quotes"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:textColor="#000"
        />
    </LinearLayout>
</LinearLayout>
