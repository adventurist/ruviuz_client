<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_iview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="stronglogic.ruviuz.IndexViewActivity"
    style="@style/RuvFullFrag"
    android:background="@color/colorRow">

    <include
        layout="@layout/app_bar"/>

    <!--<android.support.v7.widget.SearchView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="32dp"-->
        <!--android:id="@+id/ruvSearch"-->
        <!--android:layout_marginTop="?attr/actionBarSize"/>-->

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/side_menu"
        android:title="@string/ruuvmenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorRow">

        <android.support.design.widget.NavigationView
            android:id="@+id/left_drawer"
            android:layout_height="match_parent"
            android:layout_width="240dp"
            android:layout_marginTop="?attr/actionBarSize"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:menu="@menu/nav_menu"
            app:itemBackground="?attr/colorAccent"
            app:itemTextColor="@color/common_google_signin_btn_text_dark_default"
            android:background="?attr/colorAccent" />
    </android.support.v4.widget.DrawerLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="?attr/actionBarSize">

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/indexView"
                android:background="@color/colorRow" />

            <android.support.design.widget.FloatingActionButton
                android:layout_width="match_parent"
                app:elevation="8dp"
                android:clickable="true"
                app:fabSize="mini"
                app:srcCompat="@drawable/showall"
                android:id="@+id/fullView"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="36dp"
                android:layout_marginEnd="48dp"
                android:layout_height="64dp" />

        </FrameLayout>
</RelativeLayout>
