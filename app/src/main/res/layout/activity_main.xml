<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/MainParentView"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="stronglogic.ruviuz.MainActivity"
    android:background="@color/material_grey_800">

    <include
        layout="@layout/app_bar"/>

    <RelativeLayout
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:text="RUVIUZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/appTitle"
            android:textColor="@color/material_deep_teal_500"
            android:textSize="42dp"
            android:textIsSelectable="false"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:typeface="normal" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:id="@+id/switchLayout"
            android:layout_below="@id/appTitle"
            android:padding="16dp">
            <Switch
                android:layout_width="128dp"
                android:layout_height="44dp"
                android:layout_alignParentStart="true"
                android:id="@+id/roofFlat"
                android:text="@string/flatAsk"
                android:checked="false"
                android:textColor="@color/material_deep_teal_200" />

            <Switch
                android:layout_width="128dp"
                android:layout_height="44dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/premiumMaterial"
                android:text="@string/matAsk"
                android:textColor="@color/material_deep_teal_200" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/numberContainer"
            android:layout_below="@id/switchLayout"
            android:padding="12dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/numberText"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rfLgText"
                    android:text="Length"
                    android:layout_marginBottom="17dp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/material_deep_teal_200" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rfWdText"
                    android:text="Width"
                    android:layout_marginTop="22dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/material_deep_teal_200" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rfSlText"
                    android:text="Slope"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/material_deep_teal_200" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/numberLayout">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/uiRow1"
                    android:weightSum="1">
                    <NumberPicker
                        android:id="@+id/roofLength"
                        android:layout_width="84dp"
                        android:layout_height="56dp"
                        android:background="@color/material_grey_300" />
                    <Button
                        android:layout_height="36dp"
                        android:id="@+id/addressGetDialog"
                        android:text="Address"
                        android:layout_gravity="end"
                        android:layout_alignWithParentIfMissing="true"
                        android:background="@android:color/holo_green_light"
                        android:alpha="0.2"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:elevation="0dp"
                        android:drawableEnd="@drawable/address"
                        android:layout_width="108dp"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/uiRow2">
                    <NumberPicker
                        android:id="@+id/roofWidth"
                        android:layout_width="84dp"
                        android:layout_height="56dp"
                        android:background="@color/material_grey_300" />
                    <ImageButton
                        android:layout_height="36dp"
                        android:id="@+id/takePhoto"
                        android:layout_gravity="end"
                        android:layout_alignWithParentIfMissing="true"
                        android:background="?attr/actionModeSplitBackground"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:elevation="0dp"
                        android:src="@android:drawable/ic_menu_camera"
                        android:layout_width="108dp"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/uiRow3">
                    <NumberPicker
                        android:id="@+id/roofSlope"
                        android:layout_width="84dp"
                        android:layout_height="56dp"
                        android:background="@color/material_grey_300" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/angleContainer"
            android:layout_below="@id/numberContainer">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/orientationText"
                android:text="@string/_0_00000"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="36dp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@id/angleContainer">
            <ImageView
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:maxWidth="72dp"
                android:id="@+id/ruvPic1"
                android:adjustViewBounds="true"
                android:layout_alignParentStart="true"
                android:contentDescription="@string/ruvhomephoto"/>

            <ImageView
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:maxWidth="72dp"
                android:id="@+id/ruvPic2"
                android:adjustViewBounds="true"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/ruvhomephoto"/>

            <ImageView
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:maxWidth="72dp"
                android:id="@+id/ruvPic3"
                android:adjustViewBounds="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/ruvhomephoto"/>

        </RelativeLayout>

        <Button
            android:layout_width="128dp"
            android:layout_height="48dp"
            android:id="@+id/ruuvSubmitBtn"
            android:background="@android:color/black"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:text="@string/send"
            android:textColorLink="?android:attr/colorFocusedHighlight"
            android:textColor="@android:color/holo_green_light"
            android:textColorHint="@android:color/holo_green_light"
            android:textColorHighlight="@color/colorAccent"
            android:backgroundTint="@android:color/black"
            android:elevation="0dp"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"/>

        <Button
            android:layout_height="36dp"
            android:id="@+id/quoteStatus"
            android:text="@string/draft"
            android:layout_alignBottom="@id/ruuvSubmitBtn"
            android:background="@android:color/holo_green_light"
            android:alpha="0.2"
            android:layout_marginTop="36dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:elevation="0dp"
            android:drawableEnd="@drawable/checked"
            android:layout_width="96dp"
            android:layout_alignParentEnd="true"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>
</RelativeLayout>