<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/MainParentView"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    tools:context="stronglogic.ruviuz.MainActivity"
    android:background="#000000">

    <include
        layout="@layout/app_bar"/>

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/side_menu"
        android:title="@string/ruuvmenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#212121">
        <!-- The main content view -->
        <!--<FrameLayout-->
            <!--android:id="@+id/menu_frame"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent" />-->
        <android.support.design.widget.NavigationView
            android:id="@+id/left_drawer"
            android:layout_height="match_parent"
            android:layout_width="240dp"
            android:layout_marginTop="?attr/actionBarSize"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/nav_drawer_header"
            app:menu="@menu/nav_menu"
            app:itemBackground="?attr/colorAccent"
            app:itemTextColor="@color/common_google_signin_btn_text_dark_default"
            android:background="?attr/colorAccent" />
    </android.support.v4.widget.DrawerLayout>

    <RelativeLayout
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textAlignment="center"
            android:shadowColor="#000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="5"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/mainTitle"
            android:text="@string/admin_ui"
            android:textColor="@color/ruvGreen"
            android:layout_alignParentTop="true"
            />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mainTitle"
            android:layout_centerInParent="true"
            android:id="@+id/switchLayout"
            android:padding="16dp">
            <Switch
                android:layout_width="128dp"
                android:layout_height="44dp"
                android:layout_alignParentStart="true"
                android:id="@+id/roofFlat"
                android:text="@string/flatAsk"
                android:checked="false"
                android:textColor="@color/material_deep_teal_200" />

            <Switch
                android:layout_width="128dp"
                android:layout_height="44dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/premiumMaterial"
                android:text="@string/matAsk"
                android:textColor="@color/material_deep_teal_200" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/numberContainer"
            android:layout_below="@id/switchLayout"
            android:padding="12dp"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/numberText"
                android:paddingTop="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rfLgText"
                    android:text="Length"
                    android:textColor="@color/material_deep_teal_200"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rfWdText"
                    android:text="Width"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/material_deep_teal_200" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rfSlText"
                    android:text="Slope"
                    android:layout_marginTop="26dp"
                    android:textColor="@color/material_deep_teal_200" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/calcTxt"
                    android:text="@string/calculate"
                    android:layout_marginTop="26dp"
                    android:textColor="@color/material_deep_teal_200" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/numberLayout">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/uiRow1"
                    android:layout_marginBottom="1dp"
                    android:weightSum="1"
                    android:layout_marginTop="6dp">
                    <EditText
                        android:id="@+id/roofLength"
                        android:layout_height="wrap_content"
                        android:background="@color/ruvGreen"
                        android:textAlignment="center"
                        android:inputType="numberDecimal"
                        android:layout_centerVertical="false"
                        android:textColor="#000"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_width="48dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/roofLengthFtTxt"
                        android:text="@string/ft"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/roofLength" />

                    <EditText
                        android:id="@+id/roofLengthIn"
                        android:layout_height="wrap_content"
                        android:background="@color/ruvGreen"
                        android:textAlignment="center"
                        android:inputType="numberDecimal"
                        android:layout_centerVertical="false"
                        android:textColor="#000"
                        android:layout_marginTop="8dp"
                        android:layout_toEndOf="@+id/roofLengthFtTxt"
                        android:layout_width="48dp"
                        android:layout_marginStart="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/roofLengthInTxt"
                        android:text="@string/inches"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/roofLengthIn" />

                    <Button
                        android:layout_height="36dp"
                        android:id="@+id/addressGetDialog"
                        android:text="@string/address"
                        android:layout_gravity="end"
                        android:layout_alignWithParentIfMissing="true"
                        android:background="@drawable/ruvbtn"
                        android:alpha="0.2"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:elevation="0dp"
                        android:drawableEnd="@drawable/address"
                        android:layout_width="108dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="2dp" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/uiRow2"
                    android:layout_marginBottom="1dp">
                   

                    <EditText
                        android:id="@+id/roofWidth"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:background="@color/ruvGreen"
                        android:textAlignment="center"
                        android:inputType="numberDecimal"
                        android:layout_centerVertical="false"
                        android:textColor="#000"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="12dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/roofWidthFtTxt"
                        android:text="@string/ft"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/roofWidth" />

                    <EditText
                        android:id="@+id/roofWidthIn"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:background="@color/ruvGreen"
                        android:inputType="numberDecimal"
                        android:textAlignment="center"
                        android:layout_centerVertical="false"
                        android:layout_toEndOf="@+id/roofWidthFtTxt"
                        android:textColor="#000"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/roofWidthInTxt"
                        android:text="@string/inches"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/roofWidthIn" />

                    <Button
                        android:layout_height="36dp"
                        android:id="@+id/clientGetDialog"
                        android:text="@string/client_info"
                        android:layout_gravity="end"
                        android:layout_alignWithParentIfMissing="true"
                        android:background="@drawable/ruvbtn"
                        android:alpha="0.2"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:elevation="0dp"
                        android:drawableEnd="@drawable/customer"
                        android:layout_width="108dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="2dp" />
                    
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/uiRow3">

                    <EditText
                        android:id="@+id/roofSlope"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:background="@color/ruvGreen"
                        android:textAlignment="center"
                        android:inputType="numberDecimal"
                        android:layout_centerVertical="false"
                        android:textColor="#000"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:id="@+id/slopeSymbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:layout_centerVertical="false"
                        android:layout_toEndOf="@id/roofSlope"
                        android:text="@string/degree_symbol"
                        android:textColor="#fff"
                        android:layout_marginTop="4dp"
                        android:textSize="32dp"
                        android:layout_marginStart="8dp" />

                    <ImageButton
                        android:layout_height="36dp"
                        android:id="@+id/takePhoto"
                        android:layout_gravity="end"
                        android:layout_alignWithParentIfMissing="true"
                        android:background="?attr/actionModeSplitBackground"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:elevation="0dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/addphoto48"
                        android:layout_width="108dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="4dp" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/uiRow4">

                    <ImageButton
                        android:id="@+id/calculateBtn"
                        android:layout_height="32dp"
                        android:layout_alignParentStart="true"
                        android:padding="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/calculate"
                        android:background="@drawable/ruvbtn"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_width="48dp" />

                    <EditText
                        android:id="@+id/currentPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:layout_centerVertical="false"
                        android:layout_toEndOf="@id/calculateBtn"
                        android:text="@string/no_price"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:layout_marginTop="14dp"
                        android:layout_marginStart="8dp"
                        android:textSize="16sp" />

                    <Button
                        android:layout_height="36dp"
                        android:id="@+id/metricfragOpen"
                        android:elegantTextHeight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="end"
                        android:layout_marginTop="8dp"
                        android:elevation="0dp"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:background="@drawable/metric"
                        android:layout_width="108dp" />
                    
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@id/numberContainer"
            android:layout_marginTop="8dp">
            <ImageView
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:maxWidth="72dp"
                android:id="@+id/ruvPic1"
                android:adjustViewBounds="true"
                android:layout_alignParentStart="true"
                android:contentDescription="@string/ruvhomephoto"/>

            <ImageView
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:maxWidth="72dp"
                android:id="@+id/ruvPic2"
                android:adjustViewBounds="true"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/ruvhomephoto"/>

            <ImageView
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:maxWidth="72dp"
                android:id="@+id/ruvPic3"
                android:adjustViewBounds="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/ruvhomephoto"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:id="@+id/clearBtnTxt"
            android:text="@string/clear"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/ruvGreen"
            android:layout_alignParentStart="false"
            android:layout_alignParentBottom="true"
            />

        <ImageButton
            android:id="@+id/clearBtn"
            android:src="@drawable/restart"
            android:background="@drawable/ruvbtn"
            android:scaleType="fitXY"
            android:layout_alignParentBottom="false"
            android:layout_alignWithParentIfMissing="false"
            android:padding="4dp"
            android:layout_above="@+id/clearBtnTxt"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="4dp" />


        <ImageButton
            android:layout_height="48dp"
            android:scaleType="fitCenter"
            android:id="@+id/ruuvSubmitBtn"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/upload"
            android:padding="4dp"
            android:text="@string/send"
            android:textColorLink="?android:attr/colorFocusedHighlight"
            android:textColor="@color/ruvSelected"
            android:textColorHighlight="@color/colorAccent"
            android:elevation="0dp"
            android:textSize="18sp"
            android:layout_above="@+id/sendTxt"
            android:background="@drawable/ruvbtn"
            android:layout_width="112dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/sendTxt"
            android:text="@string/send"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/ruvGreen"
            android:layout_alignParentBottom="true"
            />

        <Button
            android:id="@+id/quoteStatus"
            android:text="@string/draft"
            android:background="@color/ruvGreen"
            android:alpha="0.2"
            android:layout_marginTop="36dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:elevation="0dp"
            android:drawableEnd="@drawable/checked"
            android:layout_alignParentEnd="true"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="true"
            android:layout_height="48dp"
            android:textSize="12sp"
            android:layout_width="64dp" />

    </RelativeLayout>

</RelativeLayout>