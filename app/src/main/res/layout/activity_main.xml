<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/MainParentView"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    tools:context="stronglogic.ruviuz.MainActivity"
    android:background="@color/material_grey_800">

    <include
        layout="@layout/app_bar"/>

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/side_menu"
        android:title="@string/ruuvmenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">
        <!-- The main content view -->
        <FrameLayout
            android:id="@+id/menu_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <android.support.design.widget.NavigationView
            android:id="@+id/left_drawer"
            android:layout_height="match_parent"
            android:layout_width="240dp"
            android:layout_marginTop="?attr/actionBarSize"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/nav_drawer_header"
            app:menu="@menu/nav_menu"
            app:itemBackground="?attr/colorAccent"
            app:itemTextColor="@color/common_google_signin_btn_text_dark_default"
            android:background="?attr/colorAccent" />
    </android.support.v4.widget.DrawerLayout>

    <RelativeLayout
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:id="@+id/switchLayout"
            android:layout_alignParentTop="true"
            android:padding="16dp">
            <Switch
                android:layout_width="128dp"
                android:layout_height="44dp"
                android:layout_alignParentStart="true"
                android:id="@+id/roofFlat"
                android:text="@string/flatAsk"
                android:checked="false"
                android:textColor="@color/material_deep_teal_200" />

            <Switch
                android:layout_width="128dp"
                android:layout_height="44dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/premiumMaterial"
                android:text="@string/matAsk"
                android:textColor="@color/material_deep_teal_200" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/numberContainer"
            android:layout_below="@id/switchLayout"
            android:padding="12dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/numberText"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rfLgText"
                    android:text="Length"
                    android:layout_marginBottom="26dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/material_deep_teal_200" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rfWdText"
                    android:text="Width"
                    android:layout_marginTop="22dp"
                    android:layout_marginBottom="28dp"
                    android:textColor="@color/material_deep_teal_200" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rfSlText"
                    android:text="Slope"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/material_deep_teal_200" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/numberLayout">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/uiRow1"
                    android:layout_marginBottom="1dp"
                    android:weightSum="1">
                    <NumberPicker
                        android:id="@+id/roofLength"
                        android:layout_width="84dp"
                        android:layout_height="64dp"
                        android:theme="@style/AppTheme.Picker"
                        android:solidColor="#a2b7d4"
                        android:divider="@color/NumberSeparator" />
                    <Button
                        android:layout_height="36dp"
                        android:id="@+id/addressGetDialog"
                        android:text="@string/address"
                        android:layout_gravity="end"
                        android:layout_alignWithParentIfMissing="true"
                        android:background="@android:color/holo_green_light"
                        android:alpha="0.2"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:elevation="0dp"
                        android:drawableEnd="@drawable/address"
                        android:layout_width="108dp"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/uiRow2"
                    android:layout_marginBottom="1dp">
                    <!--<biz.kasual.materialnumberpicker.MaterialNumberPicker-->

                        <!--android:id="@+id/roofWidth"-->
                        <!--android:layout_width="84dp"-->
                        <!--android:layout_height="64dp"-->
                        <!--android:theme="@style/AppTheme.Picker"-->
                        <!--android:background="@color/material_grey_300" />-->
                    <NumberPicker
                        android:id="@+id/roofWidth"
                        android:layout_width="84dp"
                        android:layout_height="64dp"
                        android:solidColor="#a2b7d4"
                        android:theme="@style/AppTheme.Picker"
                        />
                    <ImageButton
                        android:layout_height="36dp"
                        android:id="@+id/takePhoto"
                        android:layout_gravity="end"
                        android:layout_alignWithParentIfMissing="true"
                        android:background="?attr/actionModeSplitBackground"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:elevation="0dp"
                        android:src="@android:drawable/ic_menu_camera"
                        android:layout_width="108dp"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/uiRow3">
                    <NumberPicker
                        android:id="@+id/roofSlope"
                        android:layout_width="84dp"
                        android:layout_height="64dp"
                        android:theme="@style/AppTheme.Picker"
                        android:divider="@color/NumberSeparator"
                        android:solidColor="#a2b7d4"
                        android:showDividers="beginning" />

                    <Button
                        android:layout_height="36dp"
                        android:id="@+id/metricfragOpen"
                        android:elegantTextHeight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="end"
                        android:layout_marginTop="10dp"
                        android:elevation="0dp"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:background="@drawable/metric"
                        android:layout_width="108dp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/angleContainer"
            android:layout_below="@id/numberContainer">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/orientationText"
                android:text="@string/_0_00000"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="36dp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@id/angleContainer">
            <ImageView
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:maxWidth="72dp"
                android:id="@+id/ruvPic1"
                android:adjustViewBounds="true"
                android:layout_alignParentStart="true"
                android:contentDescription="@string/ruvhomephoto"/>

            <ImageView
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:maxWidth="72dp"
                android:id="@+id/ruvPic2"
                android:adjustViewBounds="true"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/ruvhomephoto"/>

            <ImageView
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:maxWidth="72dp"
                android:id="@+id/ruvPic3"
                android:adjustViewBounds="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/ruvhomephoto"/>

        </RelativeLayout>

        <Button
            android:id="@+id/clearBtn"
            android:text="@string/clear"
            android:textColor="#FFFFFF"
            android:layout_height="36dp"
            android:layout_width="96dp"
            android:background="@drawable/clearbtn"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"/>

        <Button
            android:layout_width="128dp"
            android:layout_height="48dp"
            android:id="@+id/ruuvSubmitBtn"
            android:background="@android:color/black"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:text="@string/send"
            android:textColorLink="?android:attr/colorFocusedHighlight"
            android:textColor="@android:color/holo_green_light"
            android:textColorHint="@android:color/holo_green_light"
            android:textColorHighlight="@color/colorAccent"
            android:backgroundTint="@android:color/black"
            android:elevation="0dp"
            android:layout_marginBottom="24dp"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"/>

        <Button
            android:layout_height="36dp"
            android:layout_width="96dp"
            android:id="@+id/quoteStatus"
            android:text="@string/draft"
            android:layout_alignBottom="@id/ruuvSubmitBtn"
            android:background="@android:color/holo_green_light"
            android:alpha="0.2"
            android:layout_marginTop="36dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:elevation="0dp"
            android:drawableEnd="@drawable/checked"
            android:layout_alignParentEnd="true"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

</RelativeLayout>