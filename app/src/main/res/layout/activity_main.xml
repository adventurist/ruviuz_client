                android:text="@string/slope"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_toEndOf="@id/slopeLabel"
                android:layout_below="@id/widthLabel"
                android:layout_columnSpan="1"
                android:id="@+id/roofSlope"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/roofSlope"
                android:layout_below="@id/widthLabel"
                android:layout_marginTop="4dp"
                android:layout_columnSpan="1"
                android:text="@string/degree_symbol"/>
            <LinearLayout
                android:layout_columnSpan="3"
                android:layout_rowSpan="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="5">

                </GridLayout>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:id="@+id/matLabel"
                android:layout_columnSpan="1"
                android:layout_below="@id/slopeLabel"
                android:text="@string/material"
                android:textSize="17sp"
                />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/slopeLabel"
                android:layout_toEndOf="@id/matLabel"
