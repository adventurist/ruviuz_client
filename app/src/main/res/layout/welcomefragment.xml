<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="stronglogic.ruviuz.fragments.WelcomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:id="@+id/loginUI"
        android:orientation="vertical"
        android:background="@color/colorRow">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/metricWelcome"
            android:text="@string/ruviuz_welcome"
            android:textColor="#000"
             />

        <ImageButton
            android:layout_width="168dp"
            android:layout_height="42dp"
            android:text="@string/login"
            android:id="@+id/loginBtn"
            android:padding="4dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:background="@drawable/ruvbtn_wt"
            android:src="@drawable/login2"
            android:textColor="@color/material_grey_100"
            android:layout_margin="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:layout_gravity="center_horizontal"
            android:textColor="#000"
            />

        <ImageButton
            android:layout_width="168dp"
            android:layout_height="42dp"
            android:text="@string/login"
            android:id="@+id/newAccountBtn"
            android:padding="4dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:background="@drawable/ruvbtn_wt"
            android:src="@drawable/newaccount"
            android:textColor="@color/material_grey_100"
            android:layout_margin="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_account"
            android:layout_gravity="center_horizontal"
            android:textColor="#000"
            />

        <ImageButton
            android:layout_width="168dp"
            android:layout_height="42dp"
            android:id="@+id/createQuote"
            android:layout_gravity="center_horizontal"
            android:selectAllOnFocus="true"
            android:padding="4dp"
            android:gravity="center"
            android:background="@drawable/ruvbtn_wt"
            android:scaleType="fitCenter"
            android:src="@drawable/create_new"
            android:layout_margin="8dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_new_quote"
            android:layout_gravity="center_horizontal"
            android:textColor="#000"
            />
    </LinearLayout>

</LinearLayout>
