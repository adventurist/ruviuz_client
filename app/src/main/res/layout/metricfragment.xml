<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ruvGrey"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="stronglogic.ruviuz.fragments.MetricFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="24sp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/metricWelcome"
        android:text="@string/metrics"
        android:textColor="#000"
        android:layout_centerInParent="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/metricWelcome"
        android:textSize="20sp"
        android:id="@+id/lengthPickTv"
        android:layout_centerHorizontal="true"
        android:text="@string/length"
        android:layout_marginTop="32dp"
        android:textColor="#ffffff" />

    <me.angrybyte.numberpicker.view.ActualNumberPicker
        android:id="@+id/lengthPickerFt"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="12dp"
        android:background="#ffc400"
        app:bar_color="@android:color/white"
        app:bar_width="2dp"
        app:bars_count="26"
        app:controls_color="@android:color/white"
        app:draw_over_controls="true"
        app:draw_over_text="false"
        app:fast_controls_color="@android:color/darker_gray"
        app:highlight_color="#263238"
        app:max_value="500"
        app:min_value="0"
        app:selection_color="#fff"
        app:show_bars="true"
        app:show_controls="true"
        app:show_fast_controls="false"
        app:show_highlight="true"
        app:show_text="true"
        app:text_color="#000"
        app:text_size="20sp"
        app:value="0"
        android:layout_below="@id/lengthPickTv"
        android:layout_marginTop="12dp"
        android:layout_height="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ft"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:layout_marginTop="32dp"
        android:layout_below="@id/lengthPickTv"
        android:layout_toStartOf="@+id/lengthAnchor"
        android:layout_toEndOf="@+id/lengthPickerFt"
        android:layout_marginStart="8dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:id="@+id/lengthAnchor"
        android:layout_below="@+id/lengthPickTv" />

    <me.angrybyte.numberpicker.view.ActualNumberPicker
        android:id="@+id/lengthPickerIn"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@id/lengthAnchor"
        android:layout_marginStart="12dp"
        android:background="#ffc400"
        app:bar_color="@android:color/white"
        app:bar_width="2dp"
        app:bars_count="26"
        app:controls_color="@android:color/white"
        app:draw_over_controls="true"
        app:fast_controls_color="@android:color/darker_gray"
        app:highlight_color="#263238"
        app:max_value="500"
        app:min_value="0"
        app:selection_color="#fff"
        app:show_bars="true"
        app:show_controls="true"
        app:show_fast_controls="false"
        app:show_highlight="true"
        app:show_text="true"
        app:text_color="#000"
        app:text_size="20sp"
        app:value="0"
        android:layout_below="@id/lengthPickTv"
        android:layout_marginTop="12dp"
        android:layout_height="48dp"
        app:draw_over_text="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inches"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:layout_marginTop="32dp"
        android:layout_below="@id/lengthPickTv"
        android:layout_toEndOf="@+id/lengthPickerIn"
        android:layout_marginStart="8dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/widthPickerTv"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lengthPickerFt"
        android:text="@string/width"
        android:layout_marginTop="12dp"
        android:textColor="#ffffff" />

    <me.angrybyte.numberpicker.view.ActualNumberPicker
        android:id="@+id/widthPickerFt"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="12dp"
        android:background="#ffc400"
        app:bar_color="@android:color/white"
        app:bar_width="2dp"
        app:bars_count="26"
        app:controls_color="@android:color/white"
        app:draw_over_controls="true"
        app:draw_over_text="false"
        app:fast_controls_color="@android:color/darker_gray"
        app:highlight_color="#263238"
        app:max_value="500"
        app:min_value="0"
        app:selection_color="#fff"
        app:show_bars="true"
        app:show_controls="true"
        app:show_fast_controls="false"
        app:show_highlight="true"
        app:show_text="true"
        app:text_color="#000"
        app:text_size="20sp"
        app:value="0"
        android:layout_below="@+id/widthPickerTv"
        android:layout_marginTop="12dp"
        android:layout_height="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ft"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/widthPickerTv"
        android:layout_toStartOf="@+id/widthAnchor"
        android:layout_toEndOf="@+id/widthPickerFt"
        android:layout_marginStart="8dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:id="@+id/widthAnchor"
        android:layout_below="@+id/widthPickerTv" />

    <me.angrybyte.numberpicker.view.ActualNumberPicker
        android:id="@+id/widthPickerIn"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@id/widthAnchor"
        android:layout_marginStart="12dp"
        android:background="#ffc400"
        app:bar_color="@android:color/white"
        app:bar_width="2dp"
        app:bars_count="26"
        app:controls_color="@android:color/white"
        app:draw_over_controls="true"
        app:draw_over_text="false"
        app:fast_controls_color="@android:color/darker_gray"
        app:highlight_color="#263238"
        app:max_value="500"
        app:min_value="0"
        app:selection_color="#fff"
        app:show_bars="true"
        app:show_controls="true"
        app:show_fast_controls="false"
        app:show_highlight="true"
        app:show_text="true"
        app:text_color="#000"
        app:text_size="20sp"
        app:value="0"
        android:layout_below="@+id/widthPickerTv"
        android:layout_marginTop="12dp"
        android:layout_height="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inches"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/widthPickerTv"
        android:layout_toEndOf="@+id/widthPickerIn"
        android:layout_marginStart="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/widthPickerFt"
        android:text="@string/slope"
        android:textColor="#ffffff"
        android:id="@+id/slopePickerTv" />


    <me.angrybyte.numberpicker.view.ActualNumberPicker
    android:id="@+id/slopePicker"
    android:layout_width="wrap_content"
    android:layout_height="48dp"
    android:layout_centerHorizontal="true"
    android:layout_marginStart="36dp"
    android:layout_marginEnd="36dp"
    android:layout_below="@id/slopePickerTv"
    android:background="#ffc400"
    app:bar_color="@android:color/white"
    app:bar_width="2dp"
    app:bars_count="26"
    android:layout_centerVertical="false"
    app:controls_color="@android:color/white"
    app:draw_over_controls="true"
    app:draw_over_text="false"
    app:fast_controls_color="@android:color/darker_gray"
    app:highlight_color="#263238"
    app:max_value="360"
    app:min_value="0"
    app:selection_color="#fff"
    app:show_bars="true"
    app:show_controls="false"
    app:show_fast_controls="false"
    app:show_highlight="true"
    app:show_text="true"
    app:text_color="#000"
    app:text_size="20sp"
    app:value="0"
    android:layout_marginTop="12dp" />

    <!--<Button-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/metricBack"-->
        <!--android:background="@drawable/ic_keyboard_arrow_left_black_24dp"-->
