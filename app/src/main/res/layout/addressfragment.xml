<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000"
    style="@style/RuvFullFrag"
    android:theme="@style/Ruviuz.rootFullView"
    android:id="@+id/loginFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="stronglogic.ruviuz.fragments.LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
        android:id="@+id/ruvFragToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/MenuBackground"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/RuvFragActionBar"
        app:popupTheme="@style/RuvFragActionBar"/>

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/loginUI"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:background="@color/colorRow">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/addressFragTitle"
                android:text="@string/enter_address"
                android:textColor="#000"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:id="@+id/addressText"
                android:inputType="textPostalAddress|textMultiLine"
                android:layout_gravity="center_vertical"
                android:hint="@string/street"
                android:selectAllOnFocus="true"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:gravity="center"
                android:textColor="@color/material_blue_grey_950"
                android:background="#fff"

                android:layout_marginTop="1.5dp"
                android:layout_marginBottom="1dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="1dp">
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:id="@+id/cityText"
                    android:hint="@string/city"
                    android:textColor="@color/material_blue_grey_950"
                    android:selectAllOnFocus="true"
                    android:layout_marginEnd="0.5dp"
                    android:background="#fff"
                    android:layout_weight="0.71"
                    android:textAlignment="center"
                    android:inputType="textEmailAddress" />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:id="@+id/provinceText"
                    android:hint="@string/province"
                    android:selectAllOnFocus="true"
                    android:layout_marginStart="0.5dp"
                    android:textColor="@color/material_blue_grey_950"
                    android:background="#fff"
                    android:layout_weight="0.29"
                    android:textAlignment="center"
                    android:inputType="textPostalAddress" />
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:id="@+id/postalCode"
                android:inputType="textPostalAddress"
                android:layout_gravity="center_vertical"
                android:hint="@string/postal_code"
                android:selectAllOnFocus="true"
                android:textColor="@color/material_blue_grey_950"
                android:gravity="center"
                android:background="#fff"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="1dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="@string/set_address"
                android:textColorHint="#fff"
                android:id="@+id/addressBtn"
                android:layout_gravity="center_horizontal"
                android:textSize="24sp"
                android:background="@drawable/ruvbtn_bl"
                android:textColor="#fff"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1.5dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
