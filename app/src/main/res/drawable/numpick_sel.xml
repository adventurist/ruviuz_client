<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_checked="true">
        <shape  >
            <solid android:color="#ee52ff"/>
            <corners
                android:radius="7dp"/>
            <size android:width="96dp" android:height="36dp"/>
            <stroke
                android:width="1dp"
                android:color="#717171" />
            <padding
                android:left="4dp"
                android:right="4dp"
                />

        </shape>

    </item>

    <item android:state_checked="false" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >
            <solid android:color="#fff"/>
            <corners
                android:radius="7dp"/>
            <size android:width="96dp" android:height="36dp"/>
            <stroke
                android:width="1dp"
                android:color="#717171" />
            <padding
                android:left="4dp"
                android:right="4dp"
                />
        </shape>
    </item>

</selector>
